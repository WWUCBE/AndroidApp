<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"    >

    <EditText
        android:id="@+id/dialog_subject"
        style="@style/classInputs"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="Subject (eg DSCI)"
        android:inputType="text" />

    <EditText
        android:id="@+id/dialog_course"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="id (eg 241)"
        android:inputType="number"
        style="@style/classInputs"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/dialog_credits"
            style="@style/classInputs"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:ems="10"
            android:hint="Credits"
            android:inputType="number"/>

        <Spinner
            android:id="@+id/dialog_grade_spinner"
            style="@style/classInputs"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="2" />
    </LinearLayout>

</LinearLayout>